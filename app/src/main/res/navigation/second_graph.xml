<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/destination_detail"
    android:id="@+id/second_graph">

    <fragment
        android:id="@+id/destination_detail"
        android:name="com.myrecipes.fragments.RecipeDetailFragment"
        android:label="">
        <argument
            android:name="recipe_id"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/destination_player"
        android:name="com.myrecipes.fragments.StepVideoPlayerFragment"
        android:label="">
        <argument
            android:name="recipe_id"
            android:defaultValue="-1"
            app:argType="integer" />
        <argument
            android:name="step_id"
            android:defaultValue="-1"
            app:argType="integer" />
    </fragment>

</navigation>